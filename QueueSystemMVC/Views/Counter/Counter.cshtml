@{
    ViewBag.Title = (string)ViewData["QueueType"] + " Counter";
}

<h2>Counter</h2>
<div class="alert alert-danger" id="counterWarning" hidden></div>
<div class="form-group">
    <label class="col-2">Counter No:</label>
    <input type="text" id="num_only" class="form-control" placeholder="Please enter your counter number"/>
</div>

<hr />

<div>
    <input type="button" id="call_next" class="btn btn-primary btn-lg btn-block" onclick="callNext('@Url.Action((string)ViewData["QueueType"], "Counter")');" value="Call Next Number"/>
    <input type="button" disabled id="call_again" class="btn btn-lg btn-block" onclick="callAgain('@Url.Action("CallAgain", "Counter")');" value="Call Number Again"/>
    <input type="button" disabled id="skip" class="btn btn-primary btn-lg btn-block" onclick="skip('@Url.Action("Skip", "Counter")', '@Url.Action((string)ViewData["QueueType"], "Counter")');" value="Skip Current Number"/>
</div>

<h1 id="calling_header"></h1>

<hr />
<div id="no_queue_alert" class="alert alert-danger alert-lg" hidden></div>
<div id="calling_alert" class="alert alert-success alert-lg" hidden></div>
<div id="calling_again_alert" class="alert alert-warning alert-lg" hidden></div>
<div id="skip_alert" class="alert alert-danger alert-lg" hidden></div>

@Scripts.Render("~/bundles/counter");